<p id="notice"><%= notice %></p>

<h1>Listing Report Entry Details</h1>

<table>
  <thead>
    <tr>
      <th>Job type</th>
      <th>Quantity</th>
      <th>Hours</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_entry_details.each do |report_entry_detail| %>
      <tr>
        <td><%= report_entry_detail.job_type_id %></td>
        <td><%= report_entry_detail.quantity %></td>
        <td><%= report_entry_detail.hours %></td>
        <td><%= report_entry_detail.comments %></td>
        <td><%= link_to 'Show', report_entry_detail %></td>
        <td><%= link_to 'Edit', edit_report_entry_detail_path(report_entry_detail) %></td>
        <td><%= link_to 'Destroy', report_entry_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

